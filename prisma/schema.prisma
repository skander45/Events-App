// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Event {
  eventId             Int           @id @default(autoincrement())
  uidcreator          String?
  title               String?
  start_date_and_time DateTime?
  end_date_and_time   DateTime?
  location            String?
  description         String?
  budget              Int?
  type                String?
  suggestions         Suggestion[]
  feedbacks           Feedback[]
  participants        Participant[]
}

model Participant {
  Event        Event?  @relation(fields: [eventEventId], references: [eventId], onDelete: Cascade, onUpdate: Cascade)
  eventEventId Int
  name         String
  uid          String?

  @@id([eventEventId, name])
}

model Suggestion {
  suggestionId  Int       @id @default(autoincrement())
  name          String?
  date_and_time DateTime?
  suggestion    String?
  uid           String?
  Event         Event?    @relation(fields: [eventEventId], references: [eventId], onDelete: Cascade, onUpdate: Cascade)
  eventEventId  Int
}

model Feedback {
  feedbackId    Int       @id @default(autoincrement())
  name          String?
  date_and_time DateTime?
  feedback      String?
  Event         Event?    @relation(fields: [eventEventId], references: [eventId], onDelete: Cascade, onUpdate: Cascade)
  eventEventId  Int
  uid           String?
}

model Committee {
  userid Int     @id @default(autoincrement())
  uid    String?
}
