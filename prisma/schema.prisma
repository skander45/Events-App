// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Event {
  eventId             Int           @id @default(autoincrement())
  uidcreator          String?
  title               String?
  start_date_and_time DateTime?
  end_date_and_time   DateTime?
  location            String?
  description         String?
  budget              Int?
  suggestions         Suggestion[]
  feedbacks           Feedback[]
  participants        Participant[]
}

model Participant {
  Event        Event  @relation(fields: [eventEventId], references: [eventId])
  eventEventId Int
  uid          String

  @@id([eventEventId, uid])
}

model Suggestion {
  suggestionId  Int       @id @default(autoincrement())
  uid           String?
  date_and_time DateTime?
  suggestion    String?
  Event         Event     @relation(fields: [eventEventId], references: [eventId])
  eventEventId  Int
}

model Feedback {
  feedbackId    Int       @id @default(autoincrement())
  uid           String?
  date_and_time DateTime?
  feedback      String?
  Event         Event     @relation(fields: [eventEventId], references: [eventId])
  eventEventId  Int
}
